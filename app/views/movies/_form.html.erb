<%= form_with model: movie do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% movie.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :director %><br>
    <%= form.text_field :director %>
    <% movie.errors.full_messages_for(:director).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :category_id %><br>
    <%= form.text_field :category_id %>
    <% movie.errors.full_messages_for(:category_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :release_date %><br>
    <%= form.text_field :release_date %>
    <% movie.errors.full_messages_for(:release_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :user_id %><br>
    <%= form.text_field :user_id %>
    <% movie.errors.full_messages_for(:user_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit class: "btn btn-dark mt-2" %>
  </div>
<% end %>