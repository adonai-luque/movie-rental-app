<h1>Users</h1>
<%= link_to 'New User', new_user_path, class: "btn btn-dark my-3" %>
<%== pagy_bootstrap_nav(@pagy) %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Show', user, class: "btn btn-outline-dark" %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-dark" %>
          <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-dark"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
