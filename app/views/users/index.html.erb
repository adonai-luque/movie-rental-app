<h1>Users</h1>
<%= link_to 'New User', new_user_path, class: "btn btn-outline-primary my-3" %>
<%== pagy_bootstrap_nav(@pagy) %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">User Actions</th>
      <th scope="col">Rental Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Details', user, class: "btn btn-outline-dark btn-sm m-1" %>
          <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-dark btn-sm m-1" %>
          <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm m-1"  %>
        </td>
        <td>
          <%= link_to 'Rent a movie', new_rental_path(user_id: user.id, referer: "users"), class: "btn btn-outline-primary btn-sm m-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
