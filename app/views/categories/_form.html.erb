<%= form_with model: category do |form| %>
  <div>
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control mb-2" %>
    <% category.errors.full_messages_for(:name).each do |message| %>
      <div class="alert alert-danger p-2"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control mb-2 large", style: "height: 10rem" %>
    <% category.errors.full_messages_for(:description).each do |message| %>
      <div class="alert alert-danger p-2"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit class: "btn btn-outline-primary" %>
  </div>
<% end %>